name: Build and Deploy {{ goal_id }}

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to deploy to'
        required: true
        default: 'dev'
        type: choice
        options:
          - dev
          - staging
          - prod

env:
  GOAL_ID: {{ goal_id }}

jobs:
  build:
    name: Build Artifacts
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      
      - name: Log in to Azure Container Registry
        uses: azure/docker-login@v1
        with:
          login-server: {% raw %}${{"{{"}} secrets.AZURE_CONTAINER_REGISTRY }}{% endraw %}
          username: {% raw %}${{"{{"}} secrets.ACR_USERNAME }}{% endraw %}
          password: {% raw %}${{"{{"}} secrets.ACR_PASSWORD }}{% endraw %}
      
      - name: Set environment variables
        run: |
          echo "IMAGE_TAG=${{"{{"}} github.sha }}" >> $GITHUB_ENV
          echo "AZURE_CONTAINER_REGISTRY=${{"{{"}} secrets.AZURE_CONTAINER_REGISTRY }}" >> $GITHUB_ENV
      
      - name: Build and push images
        run: |
          chmod +x scripts/build.sh
          ./scripts/build.sh
      
      - name: Upload function artifacts
        uses: actions/upload-artifact@v4
        with:
          name: function-packages
          path: "*.zip"
          retention-days: 7

  deploy-dev:
    name: Deploy to Development
    runs-on: ubuntu-latest
    needs: build
    if: github.ref == 'refs/heads/develop' || github.event_name == 'workflow_dispatch'
    environment: dev
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Download function artifacts
        uses: actions/download-artifact@v4
        with:
          name: function-packages
      
      - name: Azure Login
        uses: azure/login@v1
        with:
          creds: {% raw %}${{"{{"}} secrets.AZURE_CREDENTIALS }}{% endraw %}
      
      - name: Set environment variables
        run: |
          echo "ENVIRONMENT=dev" >> $GITHUB_ENV
          echo "AZURE_RESOURCE_GROUP=${{"{{"}} secrets.AZURE_RESOURCE_GROUP_DEV }}" >> $GITHUB_ENV
          echo "AZURE_LOCATION=${{"{{"}} secrets.AZURE_LOCATION }}" >> $GITHUB_ENV
          echo "AZURE_CONTAINER_REGISTRY=${{"{{"}} secrets.AZURE_CONTAINER_REGISTRY }}" >> $GITHUB_ENV
          echo "IMAGE_TAG=${{"{{"}} github.sha }}" >> $GITHUB_ENV
          echo "AZURE_OPENAI_ENDPOINT=${{"{{"}} secrets.AZURE_OPENAI_ENDPOINT_DEV }}" >> $GITHUB_ENV
          echo "AZURE_OPENAI_KEY=${{"{{"}} secrets.AZURE_OPENAI_KEY_DEV }}" >> $GITHUB_ENV
      
      - name: Deploy to Azure
        run: |
          chmod +x scripts/deploy.sh
          ./scripts/deploy.sh
      
      - name: Run smoke tests
        run: |
          # Get API URL from deployment
          API_URL=$(az deployment group show \
            --resource-group $AZURE_RESOURCE_GROUP \
            --name {{ goal_id }}-dev-* \
            --query properties.outputs.apiUrl.value \
            -o tsv | head -n 1)
          
          # Health check
          curl -f https://$API_URL/health || exit 1
          echo "✓ Smoke tests passed"

  deploy-prod:
    name: Deploy to Production
    runs-on: ubuntu-latest
    needs: build
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    environment: prod
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Download function artifacts
        uses: actions/download-artifact@v4
        with:
          name: function-packages
      
      - name: Azure Login
        uses: azure/login@v1
        with:
          creds: {% raw %}${{"{{"}} secrets.AZURE_CREDENTIALS }}{% endraw %}
      
      - name: Set environment variables
        run: |
          echo "ENVIRONMENT=prod" >> $GITHUB_ENV
          echo "AZURE_RESOURCE_GROUP=${{"{{"}} secrets.AZURE_RESOURCE_GROUP_PROD }}" >> $GITHUB_ENV
          echo "AZURE_LOCATION=${{"{{"}} secrets.AZURE_LOCATION }}" >> $GITHUB_ENV
          echo "AZURE_CONTAINER_REGISTRY=${{"{{"}} secrets.AZURE_CONTAINER_REGISTRY }}" >> $GITHUB_ENV
          echo "IMAGE_TAG=${{"{{"}} github.sha }}" >> $GITHUB_ENV
          echo "AZURE_OPENAI_ENDPOINT=${{"{{"}} secrets.AZURE_OPENAI_ENDPOINT_PROD }}" >> $GITHUB_ENV
          echo "AZURE_OPENAI_KEY=${{"{{"}} secrets.AZURE_OPENAI_KEY_PROD }}" >> $GITHUB_ENV
      
      - name: Deploy to Azure
        run: |
          chmod +x scripts/deploy.sh
          ./scripts/deploy.sh
      
      - name: Run smoke tests
        run: |
          API_URL=$(az deployment group show \
            --resource-group $AZURE_RESOURCE_GROUP \
            --name {{ goal_id }}-prod-* \
            --query properties.outputs.apiUrl.value \
            -o tsv | head -n 1)
          
          curl -f https://$API_URL/health || exit 1
          echo "✓ Production deployment verified"
