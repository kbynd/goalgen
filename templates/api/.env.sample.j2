# {{ goal_id }} API Configuration

ENV=development
PORT=8000
CORS_ORIGINS=http://localhost:3000

# Goal Configuration
# GOAL_SPEC_PATH=/app/config/goal_spec.json  # Optional: override config location

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Checkpointer
{% if checkpointing_backend == 'cosmos' %}
COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/

# Cosmos Key - Choose one option:
# Option 1 (Recommended for production): Retrieve from Key Vault
KEYVAULT_NAME=your-keyvault-name
COSMOS_KEY_SECRET_NAME=cosmos-primary-key

# Option 2 (Local development only): Direct key
# COSMOS_KEY=your-cosmos-key-here

# Option 3 (Local testing): Use memory checkpointer (no Azure resources needed)
# USE_MEMORY_CHECKPOINTER=true

{% elif checkpointing_backend == 'redis' %}
REDIS_CONNECTION_STRING=redis://localhost:6379
{% endif %}

# Azure Conversation API
CONVERSATION_API_ENABLED=true
CONVERSATION_API_ENDPOINT=https://your-region.api.cognitive.microsoft.com
CONVERSATION_API_KEY=your-key-here
CONVERSATION_API_PROJECT={{ goal_id }}

# Logging
LOG_LEVEL=INFO
