# Microsoft Teams Bot Configuration for {{ goal_title }}

# Bot Framework credentials (from Azure Bot Service)
MICROSOFT_APP_ID=your-bot-app-id-here
MICROSOFT_APP_PASSWORD=your-bot-app-password-here

# Azure AD Tenant ID
AZURE_TENANT_ID=your-tenant-id-here

# LangGraph API endpoint
LANGGRAPH_API_URL={{ langgraph_endpoint }}
LANGGRAPH_API_TIMEOUT=90.0
LANGGRAPH_API_DOMAIN=api.example.com

# Conversation Mapping Strategy
# Options: direct, hash, database
CONVERSATION_MAPPING_STRATEGY={{ conversation_mapping.strategy }}

# Database Strategy Configuration (if using database strategy)
# Uncomment and configure ONE of the following:

# Option 1: Azure Cosmos DB
# DATASTORE_TYPE=cosmosdb
# COSMOS_CONNECTION_STRING=AccountEndpoint=https://...;AccountKey=...;
# COSMOS_DATABASE=goalgen
# COSMOS_CONTAINER=conversation_mappings

# Option 2: Azure Database for PostgreSQL
# DATASTORE_TYPE=postgres
# POSTGRES_CONNECTION_STRING=postgresql://user:password@host:5432/dbname

# Cleanup inactive conversations (days)
CLEANUP_INACTIVE_DAYS=90

# Logging
LOG_LEVEL=INFO
