{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://via.placeholder.com/40x40/{{ bot_icon_color.replace('#', '') }}/FFFFFF?text=ðŸ¤–",
                  "size": "Small",
                  "style": "Person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{{ bot_name }}",
                  "weight": "Bolder",
                  "size": "Medium"
                }
              ]
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "${response}",
          "wrap": true,
          "spacing": "Medium"
        }
      ]
    }
  ]
}
